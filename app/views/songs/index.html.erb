<h1>Listing songs</h1>

<table>
  <tr>
    <th>Album</th>
    <th>Name</th>
    <th>Path</th>
    <th>Publish at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.album %></td>
    <td><%= song.name %></td>
    <td><%= song.path %></td>
    <td><%= song.publish_at %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

